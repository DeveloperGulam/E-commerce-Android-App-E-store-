<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/menu_color"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="40dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logged_user_profile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/default_profile_picture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/login_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Sign in"
            android:textColor="#494949"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logged_user_profile" />
        <TextView
            android:id="@+id/logout_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_sign_out"
            android:drawablePadding="3dp"
            android:textColor="@color/red"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logged_user_profile" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:visibility="gone"
        android:id="@+id/login_view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/login_item1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/go_profile_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_profile_two"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/go_profile_item"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:visibility="gone"
        android:id="@+id/login_view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:id="@+id/login_item2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/my_order_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Order"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_cart_two"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/my_order_item"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:visibility="visible"
        android:id="@+id/logout_view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/logout_item1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/login_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login / Sign up"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_profile"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/login_item"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/product_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Products"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_product"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/product_item"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/cart_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_cart_three"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/cart_item"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/login_item3"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/setting_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_gear_two"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/setting_item"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:visibility="gone"
        android:id="@+id/login_view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/contact_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_edit"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/contact_item"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/help_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_baseline_help_24"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/help_item"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/white"/>

</LinearLayout>